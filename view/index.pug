html
    head
        title ClientDB
        meta(charset='UTF-8')
        link(rel='stylesheet' href='../node_modules/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='../node_modules/codemirror/lib/codemirror.css')
        link(rel='stylesheet' href='../node_modules/codemirror/theme/yeti.css')
        link(rel='stylesheet' href='../css/index.css')
        meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    body
        nav.navbar.navbar-default.navbar-inverse.navbar-static-top
            div.container-fluid
                div.navbar-header
        div.container-fluid
            div.row
                div.col-xs-2
                    div.panel.panel-default
                        div.panel-heading HISTORY
                        ul.list-group
                            li.list-group-item Cras justo odio
                            li.list-group-item Dapibus ac facilisis in
                            li.list-group-item Morbi leo risus
                            li.list-group-item Porta ac consectetur ac
                            li.list-group-item Vestibulum at eros
                div.col-xs-5
                    textarea#textInputCode.CodeMirror
                div.col-xs-5
                    textarea#textOutputCode.CodeMirror
    script.
        window.$ = window.jQuery = require('../node_modules/jquery/dist/jquery.min')
    script(src='../node_modules/knockout/build/output/knockout-latest.js' type='text/javascript')
    script(src='../node_modules/bootstrap/dist/js/bootstrap.js' type='text/javascript')
    script(src='../view_model/indexViewModel.js' type='text/javascript')
    script(src='../node_modules/codemirror/lib/codemirror.js' type='text/javascript')
    script(src='../node_modules/codemirror/mode/sql/sql.js' type='text/javascript')
    script(src='../node_modules/codemirror/mode/javascript/javascript.js' type='text/javascript')
    script.
        var codeInput = CodeMirror.fromTextArea(document.getElementById('textInputCode'), {
            lineNumbers: true,
            lineWrapping: true,
            mode: "text/x-sql"
        });

        codeInput.setValue('select * from c')

        var codeOutput = CodeMirror.fromTextArea(document.getElementById('textOutputCode'), {
            lineNumbers: true,
            lineWrapping: true,
            readOnly: true,
            mode: "application/json"
        });

        codeOutput.setValue('{\n\t"hello" : "world"\n}')
