html
    head
        title ClientDB
        meta(charset='UTF-8')
        link(rel='stylesheet' href='../node_modules/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='../node_modules/codemirror/lib/codemirror.css')
        link(rel='stylesheet' href='../node_modules/codemirror/theme/yeti.css')
        link(rel='stylesheet' href='../css/index.css')
        meta(name='viewport' content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')
    body
        //- modal
        div.modal.fade(tabindex='-1' role='dialog' aria-labelledby="mySmallModalLabel" data-bind='modal:loading')
            div.modal-dialog.modal-sm(role='document')
                div.modal-content
                    div.modal-header
                        h4(data-bind='text: loadingMsg')
                    div.modal-body
                        div.progress
                            div.progress-bar.progress-bar-striped.active(role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 100%")
        nav.navbar.navbar-default.navbar-inverse.navbar-static-top
            div.container-fluid
                div.navbar-header
                    button.btn.btn-default.navbar-btn(data-bind='click: runCode')
                        span.glyphicon.glyphicon-play
        div.container-fluid
            div.row
                div.col-xs-6
                    textarea#textInputCode.CodeMirror
                div.col-xs-6
                    textarea#textOutputCode.CodeMirror(data-bind='codemirror: codeOut, codeOptions:{lineNumbers: true, lineWrapping: true, mode: "application/json"}')
    script.
        window.$ = window.jQuery = require('../node_modules/jquery/dist/jquery.min')
    script(src='../node_modules/knockout/build/output/knockout-latest.js' type='text/javascript')
    script(src='../node_modules/bootstrap/dist/js/bootstrap.js' type='text/javascript')
    script(src='../view_model/indexViewModel.js' type='text/javascript')
    script(src='../node_modules/codemirror/lib/codemirror.js' type='text/javascript')
    script(src='../node_modules/codemirror/mode/sql/sql.js' type='text/javascript')
    script(src='../node_modules/codemirror/mode/javascript/javascript.js' type='text/javascript')
    script(src='../bindings.js' type='text/javascript')
    script.
        var codeInput = CodeMirror.fromTextArea(document.getElementById('textInputCode'), {
            lineNumbers: true,
            lineWrapping: true,
            mode: "text/x-sql"
        });

        codeInput.setValue('select * from main')
